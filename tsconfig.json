{
    "include": ["./src/**/*.ts", "./src/**/*.json"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": "src",
        "module": "commonjs",
        "target": "es2017",
        "outDir": "lib",
        "rootDir": "src",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "inlineSourceMap": true,
        "declaration": true,
        "declarationDir": "lib/types",
        "declarationMap": false
    }
}
