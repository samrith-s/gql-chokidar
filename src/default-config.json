{
    "paths": {
        "type": "string|[string]",
        "default": "./src"
    },
    "root": {
        "type": "string",
        "default": "."
    },
    "exec": {
        "type": "string",
        "default": "echo No execution command specified!"
    },
    "port": {
        "type": "number",
        "default": 4000
    },
    "ignored": {
        "type": "string",
        "default": ""
    },
    "logLevel": {
        "type": "number",
        "default": 3
    },
    "bufferInterval": {
        "type": "number",
        "default": 300
    },
    "clearScreen": {
        "type": "boolean",
        "default": true
    },
    "watcher": {
        "type": "object",
        "default": {
            "usePolling": {
                "type": "boolean",
                "default": false
            },
            "interval": {
                "type": "number",
                "default": 100
            },
            "binaryInterval": {
                "type": "number",
                "default": 300
            },
            "followSymlinks": {
                "type": "boolean",
                "default": true
            },
            "disableGlobbing": {
                "type": "boolean",
                "default": false
            }
        }
    },
    "display": {
        "type": "object",
        "default": {
            "startMessage": {
                "type": "string",
                "default": "Starting"
            },
            "restartMessage": {
                "type": "string",
                "default": "Restarting"
            },
            "stopMessage": {
                "type": "string",
                "default": "Stopping"
            }
        }
    },
    "config": {
        "type": "string"
    },
    "configs": {
        "type": "[string]"
    },
    "_": {
        "type": "array"
    }
}
