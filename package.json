        "test": "echo No tests found as of now!",
        "refresh": "rm -rf ./node_modules ./yarn.lock && yarn install"
    },
    "devDependencies": {
        "@types/node": "^13.1.4",
        "@typescript-eslint/eslint-plugin": "^2.15.0",
