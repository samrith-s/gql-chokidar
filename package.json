        "eslint-plugin-json": "^2.0.1",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-prettier": "^3.1.2",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.4"
    },
    "dependencies": {
        "chokidar": "^3.3.1",
        "cli-cursor": "^3.1.0",
