{
    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#343444",
        "titleBar.inactiveBackground": "#303b58"
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "files.encoding": "utf8",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/node_modules": true,
        "**/*pnp": true
    },
    "search.exclude": {
        "**/docs": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/*/lib": true
    },
    "files.associations": {
        ".*rc": "jsonc"
    }
}
